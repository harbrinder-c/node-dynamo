<!-- Add University Modal starts here -->
<div id="addCourseModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <form action="/courses/add" method="post">
        <input type="hidden" name="action" value="add" class="action">
        <input type="hidden" name="edit_uuid" class="edit_uuid">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Course</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="university_uuid">University: </label> 
            <select class="form-control university_uuid" name="university_uuid">
              <option value="">Select University</option>
              <%
                universites.Items.forEach(function(uni, index){
                  %>
                  <option value="<%= uni.SK %>"><%= uni.name %></option>
                  <%
                }); 
              %>
            </select>
          </div>
          <div class="form-group">
            <label for="name">Name: </label> 
            <input type="text" class="form-control name" name="name" />
          </div>
          <div class="form-group">
            <label for="code">Code: </label> 
            <input type="text" class="form-control code" name="code" />
          </div>
          <div class="form-group">
            <label for="credit">Credit: </label> 
            <input type="number" class="form-control credit" name="credit" />
          </div>
          <div class="row">
            <div class="col-md-12">
              <h5><b>Timing:</b></h5>  
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="from_time">From: </label> 
                <input type="text" class="form-control timepicker from_time" name="from_time" />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="to_time">To: </label> 
                <input type="text" class="form-control timepicker to_time" name="to_time" />
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Add University Modal ends here -->