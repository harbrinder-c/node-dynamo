<section class="content-header">
  <h1>
    Courses
    <small>all the available courses in Lessn</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Courses</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <!-- <h3 class="box-title">Condensed Full Width Table</h3> -->
          <button type="button" class="btn btn-success add_course">Add New</button>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-bordered">
            <tr>
              <th>SK</th>
              <th>Name</th>
              <th>University</th>
              <th>Actions</th>
            </tr>
        	<%
      			courses.Items.forEach(function(course, index) {
      				%>
      				<tr>
      					<td><%= course.SK %></td>
                <td><%= course.name ? course.name: '-' %></td>
                <td><%= course.university_uuid ? course.university_uuid: '-' %></td>
                <td>
                  <a href="javascript:getCourse('<%= course.SK %>')"><i class="fa fa-pencil" style="color: orange"></i></a>                    
                  <a href="javascript:deleteCourse('<%= course.SK %>')"><i class="fa fa-trash" style="color: red"></i></a>                    
                </td>
      				</tr>    
      				<%
      			});
      		%>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>

  </div>
</section>
<!-- /.content -->

<!-- Add University Modal starts here -->
<div id="addCourseModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <form action="/courses/add" method="post">
        <input type="hidden" name="action" value="add">
        <input type="hidden" name="course_uuid">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Course</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="university_uuid">University: </label> 
            <select class="form-control" name="university_uuid" >
              <option value="">Select University</option>
              <%
                universites.Items.forEach(function(uni, index){
                  %>
                  <option value="<%= uni.SK %>"><%= uni.name %></option>
                  <%
                }); 
              %>
            </select>
          </div>
          <div class="form-group">
            <label for="course_name">Name: </label> 
            <input type="text" class="form-control" name="course_name" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Add University Modal ends here -->



