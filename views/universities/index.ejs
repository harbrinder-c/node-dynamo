<section class="content-header">
  <h1>
    Universities
    <small>all the available universities in Lessn</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Universities</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <!-- <h3 class="box-title">Condensed Full Width Table</h3> -->
          <button type="button" class="btn btn-success add_university">Add New</button>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-bordered">
            <tr>
              <th>SK</th>
              <th>Name</th>
              <th>Address</th>
              <th>Actions</th>
            </tr>
        	<%
      			universities.Items.forEach(function(university, index) {
      				%>
      				<tr>
      					<td><%= university.SK %></td>
                <td><%= university.name ? university.name: '-' %></td>
      					<td><%= university.address ? university.address: '-' %></td>
                <td>
                  <a href="javascript:getUniversity('<%= university.SK %>')"><i class="fa fa-pencil" style="color: orange"></i></a>                    
                  <a href="javascript:deleteUniversity('<%= university.SK %>')"><i class="fa fa-trash" style="color: red"></i></a>                    
                </td>
      				</tr>    
      				<%
      			});
      		%>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>

  </div>
</section>
<!-- /.content -->

<!-- Add University Modal starts here -->
<div id="addUniversityModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <form action="/universities/add" method="post">
        <input type="hidden" name="action" value="add">
        <input type="hidden" name="university_uuid">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add University</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="university_name">Name: </label> 
            <input type="text" class="form-control" name="university_name" />
          </div>
          <div class="form-group">
            <label for="university_address">Address: </label> 
            <input type="text" class="form-control" name="university_address" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- Add University Modal ends here -->



