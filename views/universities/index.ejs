<section class="content-header">
  <h1>
    Simple Tables
    <small>preview of simple tables</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Tables</a></li>
    <li class="active">Simple</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <!-- <h3 class="box-title">Condensed Full Width Table</h3> -->
          <button type="button" class="btn btn-success">Add New</button>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-bordered">
            <tr>
              <th style="width: 10px">SK</th>
              <th>Name</th>
            </tr>
        	<%
			universities.Items.forEach(function(university, index) {
				%>
				<tr>
					<td><%= university.SK %></td>
					<td><%= university.name %></td>
				</tr>    
				<%
			});
		%>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>

  </div>
</section>
<!-- /.content -->

<!-- Modal -->
<div id="addUniversityModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <form action="/cities/add" method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add University</h4>
        </div>
        <div class="modal-body">
        Name: <input type="text" name="university_name" /><br><br>        
        </div>
        <div class="modal-footer">
          <input type="submit" class="btn btn-success" value="Add"/><br><br><hr>
        </div>
        </form>
    </div>

  </div>
</div>