<section class="content-header">
  <h1>
    Universities
    <small>all the available universities in Lessn</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Universities</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <!-- <h3 class="box-title">Condensed Full Width Table</h3> -->
          <button type="button" class="btn btn-success add_university">Add New</button>
        </div>
        <!-- /.box-header -->
        <div class="box-body no-padding">
          <table class="table table-bordered">
            <tr>
              <th>Sr</th>
              <th>Name</th>
              <th>Web Address</th>
              <th>Email Verifier</th>
              <th>Contact Number</th>
              <th>Address</th>
              <th>Actions</th>
            </tr>
        	<%
      			universities.Items.forEach(function(university, index) {
      				%>
      				<tr>
      					<td><%= (index+1) %></td>
                <td><%= university.name ? university.name: '-' %></td>
                <td><%= university.web_address ? university.web_address: '-' %></td>
                <td><%= university.email_verifier ? university.email_verifier: '-' %></td>
                <td><%= university.contact_number ? university.contact_number: '-' %></td>
      					<td>
                  <%= university.address ? university.address: '' %><%= university.city ? ', '+university.city: '' %><%= university.state ? ', '+university.state: '' %><%= university.zip_code ? ', '+university.zip_code: '' %>
                </td>
                <td>
                  <a href="javascript:getUniversity('<%= university.SK %>')" class="edit_record" data-edit_uuid="<%= university.SK %>" data-action="edit" data-name="<%= university.name %>" data-contact_number="<%= university.contact_number %>"  data-web_address="<%= university.web_address %>"  data-email_verifier="<%= university.email_verifier %>"  data-address="<%= university.address %>" data-city="<%= university.city %>"  data-state="<%= university.state %>"  data-zip_code="<%= university.zip_code %>">
                    <i class="fa fa-pencil" style="color: orange"></i>
                  </a>                    
                  <a href="javascript:deleteUniversity('<%= university.SK %>')"><i class="fa fa-trash" style="color: red"></i></a>                    
                </td>
      				</tr>    
      				<%
      			});
      		%>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>

  </div>
</section>
<!-- /.content -->

<%- include ../universities/add_university.ejs %>